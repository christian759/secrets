<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ContentFragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide_image"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="30sp"
            android:typeface="monospace"
            android:fontFamily="monospace"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/frag1_cover"/>

    <TextView
            android:layout_marginVertical="10dp"
            android:text="@string/cover_text"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_cover"
            android:typeface="monospace"
            app:layout_constraintTop_toBottomOf="@id/text_view_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/frag1_button1"
            android:textSize="16sp"/>

    <Button
            android:text="@string/upload_image"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_button1"
            app:layout_constraintTop_toBottomOf="@id/frag1_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            android:typeface="monospace" app:cornerRadius="5dp"
            android:textSize="16sp"
            android:backgroundTint="#63636B"
            android:textColor="#B1B6C1"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/imageView1"
            android:contentDescription="@string/cover_image_content"
            app:layout_constraintTop_toBottomOf="@+id/frag1_button1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/frag1_secret"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
    />

    <TextView
            android:layout_marginVertical="10dp"
            android:text="@string/secret_text"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_secret"
            android:typeface="monospace"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/imageView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
    />

    <Button
            android:text="@string/upload_image"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag1_button2"
            app:layout_constraintTop_toBottomOf="@id/frag1_secret"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            android:typeface="monospace" app:cornerRadius="5dp"
            android:textSize="16sp"
            android:backgroundTint="#63636B"
            android:textColor="#B1B6C1"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:contentDescription="@string/secret_image_content"
            app:layout_constraintTop_toBottomOf="@+id/frag1_button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>