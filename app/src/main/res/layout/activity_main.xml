<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:background="#BA9EA3AF"
        android:layout_height="match_parent"
        >

    <androidx.cardview.widget.CardView
            android:id="@+id/topCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomCardView"
            app:layout_constraintVertical_bias="0.0"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp" app:layout_constraintHorizontal_bias="0.4" >

            <FrameLayout
                    android:id="@+id/content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="325dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/topCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bottomCardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <ImageButton
                    android:background="@drawable/circular_button"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/button"
                    android:contentDescription="@string/image_hider"
                    app:cornerRadius="10dp"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button2"
                    tools:ignore="VisualLintButtonSize"
                    android:src="@drawable/hideimage"/>

            <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:id="@+id/button2"
                    android:background="@drawable/circular_button"
                    android:contentDescription="@string/image_finder"
                    android:src="@drawable/searchimage"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toEndOf="@id/button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button3" tools:ignore="VisualLintButtonSize"/>

            <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:id="@+id/button3"
                    android:background="@drawable/circular_button"
                    android:src="@drawable/wow"
                    app:cornerRadius="10dp"
                    android:contentDescription="@string/text_hider"
                    app:layout_constraintStart_toEndOf="@id/button2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button4"
                    tools:ignore="VisualLintButtonSize"/>

            <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:id="@+id/button4"
                    android:contentDescription="@string/text_finder"
                    android:background="@drawable/circular_button"
                    android:src="@drawable/ext"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toEndOf="@id/button3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" tools:ignore="VisualLintButtonSize"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
