    <androidx.cardview.widget.CardView
            android:id="@+id/topCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomCardView"
            app:layout_constraintVertical_bias="0.0"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"/>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/topCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bottomCardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            app:contentPadding="5dp"
            app:cardBackgroundColor="#FFFFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <Button
                    android:text="Hide Image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    app:cornerRadius="14dp"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button2"/>
            <Button
                    android:text="Hide Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/button2"
                    app:cornerRadius="14dp"
                    app:layout_constraintStart_toEndOf="@id/button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button3"/>
            <Button
                    android:text="Reveal Image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    android:layout_margin="5dp"
                    app:cornerRadius="14.dp"
                    app:layout_constraintStart_toEndOf="@id/button2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button4"
            />
            <Button
                    android:text="Reveal Text"
                    android:id="@+id/button4"
                    app:cornerRadius="14.dp"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/button3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
